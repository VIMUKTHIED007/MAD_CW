<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CreateaccountActivity">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="450dp"
        android:layout_height="75dp"
        android:background="#1330CE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-1dp">

        <TextView
            android:id="@+id/txtHead"
            android:layout_width="437dp"
            android:layout_height="75dp"
            android:paddingStart="10dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:text="Create an account"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />
    </FrameLayout>

    <EditText
        android:id="@+id/nameCreate"
        android:layout_width="380dp"
        android:layout_height="61dp"
        android:background="@drawable/custome_edittext"
        android:drawableLeft="@drawable/account_circle_24"
        android:drawablePadding="12dp"
        android:hint="Name"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
        app:layout_constraintVertical_bias="0.108" />

    <EditText
        android:id="@+id/email1Create"
        android:layout_width="380dp"
        android:layout_height="61dp"
        android:background="@drawable/custome_edittext"
        android:drawableLeft="@drawable/baseline_attach_email_24"
        android:drawablePadding="12dp"
        android:hint="Email"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameCreate"
        app:layout_constraintVertical_bias="0.059" />

    <EditText
        android:id="@+id/passwordCreate"
        android:layout_width="380dp"
        android:layout_height="61dp"
        android:background="@drawable/custome_edittext"
        android:drawableLeft="@drawable/account_circle_24"
        android:drawablePadding="12dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email1Create"
        app:layout_constraintVertical_bias="0.083" />

    <EditText
        android:id="@+id/paswordConfirm"
        android:layout_width="380dp"
        android:layout_height="61dp"
        android:background="@drawable/custome_edittext"
        android:drawableLeft="@drawable/account_circle_24"
        android:drawablePadding="12dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordCreate"
        app:layout_constraintVertical_bias="0.09" />

    <Button
        android:id="@+id/btnregister"
        android:layout_width="358dp"
        android:layout_height="61dp"
        android:backgroundTint="#1330CE"
        android:text="Register"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/paswordConfirm"
        app:layout_constraintStart_toStartOf="@+id/paswordConfirm"
        app:layout_constraintTop_toBottomOf="@+id/paswordConfirm"
        app:layout_constraintVertical_bias="0.436" />

</androidx.constraintlayout.widget.ConstraintLayout>